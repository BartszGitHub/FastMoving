<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Cartao">
    <ContentPage.Content>
        <StackLayout Margin="5">
            <Entry Placeholder="Número do Cartão" Keyboard="Numeric" />
            <Entry Placeholder="Nome do Titular" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Entry Placeholder="MM/AA" Keyboard="Numeric" Grid.Column="0" Grid.Row="0"/>
                <Entry Placeholder="CCV" Keyboard="Numeric" Grid.Column="1" Grid.Row="0"/>
            </Grid>
            <Button Text="ADICIONAR" BackgroundColor="#FF8C00" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>